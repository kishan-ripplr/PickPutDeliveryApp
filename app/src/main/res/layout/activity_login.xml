<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/logo_sec"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:background="@drawable/curve_layout_bg"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ripplr_logotm" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/logo_sec"
                android:layout_alignParentBottom="true"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:text="LOGIN ID"
                    android:textColor="@color/colorTextDark"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/username"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/opacity10"
                    android:drawablePadding="@dimen/content_margin"
                    android:hint="e-Mail / Mobile no."
                    android:inputType="text"
                    android:paddingLeft="8dp"
                    android:textColor="@color/colorWhiteTwo" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="25dp"
                    android:orientation="vertical"></LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="7dp"
                    android:text="PASSWORD"
                    android:textColor="@color/colorTextDark"
                    android:textSize="14sp"
                    android:textStyle="normal" />

                <EditText
                    android:id="@+id/password"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:background="@color/opacity10"
                    android:drawablePadding="@dimen/content_margin"
                    android:inputType="textPassword"
                    android:paddingLeft="8dp"
                    android:textColor="@color/colorWhiteTwo" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_log_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="45dp"
                    android:backgroundTint="@color/colorTextDark"
                    android:text="Login"
                    android:onClick="login"
                    android:textColor="@color/colorBlackTwo" />

            </LinearLayout>


        </LinearLayout>
    </RelativeLayout>
</ScrollView>